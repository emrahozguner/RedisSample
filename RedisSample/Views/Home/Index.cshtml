@{
    ViewData["Title"] = "Home Page";
}

@model Person
<div class="container">
    <h1>@ViewBag.Time</h1>
</div>
<h3><b>Person:</b></h3>

<table class="table">
    <tr>
        <td>Ad:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Soyad:</td>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <td>Yaş:</td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Cinsiyet:</td>
        <td>
            <input type="checkbox" name="gender" id="gender" checked="@Model.isMail">Erkek
            <input type="checkbox" name="gender" id="gender" checked="!@Model.isMail">Kız
        </td>
    </tr>
</table>